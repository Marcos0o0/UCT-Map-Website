                }
                
                // Limpiar estilos inline despu√©s de la animaci√≥n
                setTimeout(() => {
                    if (!isDragging) {
                        mobilePanel.style.transition = '';
                        mobilePanel.style.transform = '';
                    }
                }, 300);
            }
            
            function handleTouchStart(e) {
                // Solo permitir drag desde el handle
                if (!e.target.closest('.mobile-panel-handle')) return;
                
                isDragging = true;
                startY = e.touches[0].clientY;
                currentY = startY;
                startTime = Date.now();
                
                // Remover transici√≥n para movimiento suave
                mobilePanel.style.transition = 'none';
                
                // Prevenir selecci√≥n de texto
                e.preventDefault();
            }
            
            function handleTouchMove(e) {
                if (!isDragging) return;
                
                currentY = e.touches[0].clientY;
                const deltaY = currentY - startY;
                
                // Calcular el porcentaje de apertura
                const panelHeight = mobilePanel.offsetHeight;
                const maxDrag = panelHeight - COLLAPSED_HEIGHT;
                
                // Posici√≥n base seg√∫n estado actual
                const baseTranslate = isExpanded ? 0 : maxDrag;
                let newTranslate = baseTranslate + deltaY;
                
                // Aplicar l√≠mites con resistencia
                if (newTranslate < -50) { // L√≠mite superior con resistencia
                    newTranslate = -50 + (newTranslate + 50) * 0.2;
                } else if (newTranslate > maxDrag + 50) { // L√≠mite inferior con resistencia
                    newTranslate = maxDrag + 50 - (maxDrag + 50 - newTranslate) * 0.2;
                }
                
                // Aplicar transformaci√≥n
                mobilePanel.style.transform = `translateY(${newTranslate}px)`;
                
                // Prevenir scroll del documento
                e.preventDefault();
            }
            
            function handleTouchEnd(e) {
                if (!isDragging) return;
                
                isDragging = false;
                
                const endTime = Date.now();
                const timeDiff = Math.max(endTime - startTime, 1); // Evitar divisi√≥n por 0
                const deltaY = currentY - startY;
                const velocity = Math.abs(deltaY) / timeDiff; // px/ms
                
                const panelHeight = mobilePanel.offsetHeight;
                const maxDrag = panelHeight - COLLAPSED_HEIGHT;
                const currentTranslate = getTranslateY();
                const dragPercent = Math.abs(currentTranslate) / maxDrag;
                
                // Decisi√≥n de expansi√≥n/colapso
                let shouldExpand = isExpanded;
                
                // 1. Prioridad a velocidad (swipe r√°pido)
                if (velocity > VELOCITY_THRESHOLD) {
                    shouldExpand = deltaY < 0; // Negativo = hacia arriba = expandir
                }
                // 2. Decisi√≥n por posici√≥n si el movimiento fue lento
                else {
                    if (isExpanded) {
                        // Si est√° expandido, colapsar solo si se arrastr√≥ m√°s del 40% hacia abajo
                        shouldExpand = dragPercent < POSITION_THRESHOLD;
                    } else {
                        // Si est√° colapsado, expandir solo si se arrastr√≥ m√°s del 40% hacia arriba
                        shouldExpand = dragPercent > (1 - POSITION_THRESHOLD);
                    }
                }
                
                // Aplicar posici√≥n final
                snapToPosition(shouldExpand);
            }
            
            // Event listeners con opciones optimizadas
            panelHandle.addEventListener('touchstart', handleTouchStart, { passive: false });
            document.addEventListener('touchmove', handleTouchMove, { passive: false });
            document.addEventListener('touchend', handleTouchEnd, { passive: true });
            
            // Click como alternativa (para testing en desktop)
            panelHandle.addEventListener('click', (e) => {
                if (e.detail === 1) { // Solo clicks simples
                    snapToPosition(!isExpanded);
                }
            });
            
            // Cleanup al salir
            window.addEventListener('beforeunload', () => {
                panelHandle.removeEventListener('touchstart', handleTouchStart);
                document.removeEventListener('touchmove', handleTouchMove);
                document.removeEventListener('touchend', handleTouchEnd);
            });
        }
    };


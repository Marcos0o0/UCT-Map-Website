        if (mobilePanel && panelHandle) {
            let startY = 0;
            let currentTranslate = 0;
            let isDragging = false;
            let startTime = 0;
            
            // Altura del panel cuando está colapsado (solo se ve el handle)
            const collapsedHeight = 80;
            const panelHeight = mobilePanel.offsetHeight;
            
            function handleTouchStart(e) {
                startY = e.touches[0].clientY;
                startTime = Date.now();
                isDragging = true;
                
                // Obtener la posición actual del panel
                const transform = window.getComputedStyle(mobilePanel).transform;
                if (transform !== 'none') {
                    const matrix = new DOMContentCSSMatrix(transform);
                    currentTranslate = matrix.m42; // translateY
                } else {
                    currentTranslate = mobilePanel.classList.contains('expanded') ? 0 : panelHeight - collapsedHeight;
                }
                
                // Remover la transición mientras se arrastra
                mobilePanel.style.transition = 'none';
            }
            
            function handleTouchMove(e) {
                if (!isDragging) return;
                
                const currentY = e.touches[0].clientY;
                const deltaY = currentY - startY;
                
                // Calcular nueva posición
                let newTranslate = currentTranslate + deltaY;
                
                // Limitar el rango de movimiento
                const maxTranslate = panelHeight - collapsedHeight; // Posición colapsada
                const minTranslate = 0; // Posición expandida
                
                // Aplicar resistencia cuando se intenta arrastrar más allá de los límites
                if (newTranslate < minTranslate) {
                    newTranslate = minTranslate - (minTranslate - newTranslate) * 0.3;
                } else if (newTranslate > maxTranslate) {
                    newTranslate = maxTranslate + (newTranslate - maxTranslate) * 0.3;
                }
                
                // Aplicar la transformación
                mobilePanel.style.transform = `translateY(${newTranslate}px)`;
                
                // Prevenir scroll del body cuando se arrastra hacia arriba
                if (deltaY < 0 || !mobilePanel.classList.contains('expanded')) {
                    e.preventDefault();
                }
            }
            
            function handleTouchEnd(e) {
                if (!isDragging) return;
                
                isDragging = false;
                const endTime = Date.now();
                const timeDiff = endTime - startTime;
                
                // Restaurar la transición
                mobilePanel.style.transition = 'transform 0.3s cubic-bezier(0.4, 0, 0.2, 1)';
                
                // Obtener la posición final
                const transform = window.getComputedStyle(mobilePanel).transform;
                let finalTranslate = 0;
                
                if (transform !== 'none') {
                    const matrix = new DOMContentCSSMatrix(transform);
                    finalTranslate = matrix.m42;
                }
                
                const deltaY = finalTranslate - currentTranslate;
                const velocity = Math.abs(deltaY) / timeDiff; // pixels por ms
                
                const threshold = (panelHeight - collapsedHeight) / 2;
                
                // Decisión basada en velocidad o posición
                if (velocity > 0.5) {
                    // Swipe rápido
                    if (deltaY > 0) {
                        // Swipe hacia abajo - colapsar
                        mobilePanel.classList.remove('expanded');
                        mobilePanel.style.transform = `translateY(calc(100% - ${collapsedHeight}px))`;
                    } else {
                        // Swipe hacia arriba - expandir
                        mobilePanel.classList.add('expanded');
                        mobilePanel.style.transform = 'translateY(0)';
                    }
                } else {
                    // Decisión basada en posición
                    if (finalTranslate > threshold) {
                        // Más cerca de colapsado
                        mobilePanel.classList.remove('expanded');
                        mobilePanel.style.transform = `translateY(calc(100% - ${collapsedHeight}px))`;
                    } else {
                        // Más cerca de expandido
                        mobilePanel.classList.add('expanded');
                        mobilePanel.style.transform = 'translateY(0)';
                    }
                }
                
                // Limpiar inline styles después de la transición
                setTimeout(() => {
                    if (!isDragging) {
                        mobilePanel.style.transition = '';
                        mobilePanel.style.transform = '';
                    }
                }, 300);
            }
            
            // Eventos en el handle
            panelHandle.addEventListener('touchstart', handleTouchStart, { passive: false });
            document.addEventListener('touchmove', handleTouchMove, { passive: false });
            document.addEventListener('touchend', handleTouchEnd);
            
            // También permitir click en el handle
            panelHandle.addEventListener('click', () => {
                if (!isDragging) {
                    mobilePanel.classList.toggle('expanded');
                }
            });
            
            // Cleanup
            window.addEventListener('beforeunload', () => {
                panelHandle.removeEventListener('touchstart', handleTouchStart);
                document.removeEventListener('touchmove', handleTouchMove);
                document.removeEventListener('touchend', handleTouchEnd);
            });
        }

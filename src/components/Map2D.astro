        display: flex;
        flex-direction: column;
    }

    .mobile-panel.expanded {
        transform: translateY(0) !important;
    }

    .mobile-panel-handle {
        width: 40px;
        height: 4px;
        background: #d1d5db;
        border-radius: 9999px;
        margin: 12px auto;
        cursor: grab;
        transition: background-color 0.2s;
        flex-shrink: 0; /* No se comprime */
        /* Aumentar área táctil */
        position: relative;
    }

    .mobile-panel-handle::before {
        content: '';
        position: absolute;
        top: -12px;
        left: -20px;
        right: -20px;
        bottom: -12px;
    }

    .mobile-panel-handle:hover {
        background: #9ca3af;
    }

    .mobile-panel-handle:active {
        cursor: grabbing;
        background: #6b7280;
    }

    /* Contenedor scrolleable */
    .mobile-panel > div:last-child {
        flex: 1;
        overflow-y: auto;
        overflow-x: hidden;
    }

    /* Prevenir scroll cuando el panel está colapsado */
    .mobile-panel:not(.expanded) > div:last-child {
        overflow: hidden;
    }

    /* Mejorar el scroll en iOS */
    .mobile-panel > div:last-child {
        -webkit-overflow-scrolling: touch;
    }

    /* Asegurar que el contenido del panel no interfiera con el drag */
    .mobile-panel.dragging {
        pointer-events: none;
    }

    .mobile-panel.dragging .mobile-panel-handle {
        pointer-events: all;
    }


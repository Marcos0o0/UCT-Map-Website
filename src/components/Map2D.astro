    // Verificar si est√° dentro del campus (con tolerancia)
    const isInBounds = 
        lat <= (campusBounds.north + latTolerance) &&
        lat >= (campusBounds.south - latTolerance) &&
        lng >= (campusBounds.west - lngTolerance) &&
        lng <= (campusBounds.east + lngTolerance);


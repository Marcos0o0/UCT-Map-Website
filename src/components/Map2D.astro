            let startY = 0;
            let currentY = 0;
            let isDragging = false;
            let startTime = 0;
            let isExpanded = false;
            
            const COLLAPSED_HEIGHT = 80;
            const VELOCITY_THRESHOLD = 0.3;
            const POSITION_THRESHOLD = 0.4; // 40% del recorrido
            
            function getTranslateY() {
                const style = window.getComputedStyle(mobilePanel);
                const matrix = new WebKitCSSMatrix(style.transform);
                return matrix.m42;
            }
            
            function snapToPosition(expand) {
                isExpanded = expand;
                mobilePanel.style.transition = 'transform 0.3s cubic-bezier(0.4, 0, 0.2, 1)';
                
                if (expand) {
                    mobilePanel.classList.add('expanded');
                    mobilePanel.style.transform = 'translateY(0)';

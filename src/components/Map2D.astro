    }

    function findNearestNode(pos) {
        let nearestNode = null;
        let minDistance = Infinity;
        
        for (const [nodeName, nodePos] of Object.entries(pathNetwork.nodes)) {
            if (!nodePos || !nodePos[0]) continue;
            const dist = calculateDistance(pos, nodePos);
            if (dist < minDistance) {
                minDistance = dist;
                nearestNode = nodeName;
            }
        }
        
        return nearestNode;
    }

    function findShortestPath(startNode, endNode) {
        // Validar que los nodos existen
        if (!pathNetwork.nodes[startNode] || !pathNetwork.nodes[endNode]) {
            console.error('Nodos inv√°lidos:', startNode, endNode);
            return null;
        }

        const openSet = [startNode];
        const closedSet = new Set(); // Nodos ya procesados
        const cameFrom = {};
        const gScore = { [startNode]: 0 };
        const fScore = { 
            [startNode]: calculateDistance(
                pathNetwork.nodes[startNode], 
                pathNetwork.nodes[endNode]
            ) 
        };

        let iterations = 0;
        const maxIterations = 1000; // L√≠mite de seguridad

        while (openSet.length > 0 && iterations < maxIterations) {
            iterations++;

            // Encontrar nodo con menor fScore en openSet
            let current = openSet[0];
            let currentIndex = 0;
            for (let i = 1; i < openSet.length; i++) {
                if ((fScore[openSet[i]] || Infinity) < (fScore[current] || Infinity)) {
                    current = openSet[i];
                    currentIndex = i;
                }
            }

            // Si llegamos al destino, reconstruir el camino
            if (current === endNode) {
                const path = [current];
                while (cameFrom[current]) {
                    current = cameFrom[current];
                    path.unshift(current);
                }
                console.log(`‚úÖ Ruta encontrada en ${iterations} iteraciones:`, path);
                return path;
            }

            // Mover current de openSet a closedSet
            openSet.splice(currentIndex, 1);
            closedSet.add(current);

            // Explorar vecinos
            const neighbors = pathNetwork.edges[current] || [];
            for (const neighbor of neighbors) {
                // Saltar si ya fue procesado
                if (closedSet.has(neighbor)) {
                    continue;
                }

                // Verificar que el nodo vecino existe
                if (!pathNetwork.nodes[neighbor]) {
                    console.warn(`Nodo vecino ${neighbor} no existe en pathNetwork.nodes`);
                    continue;
                }

                const tentativeGScore = gScore[current] + 
                    calculateDistance(
                        pathNetwork.nodes[current], 
                        pathNetwork.nodes[neighbor]
                    );

                // Si encontramos un mejor camino a este vecino
                if (tentativeGScore < (gScore[neighbor] || Infinity)) {
                    cameFrom[neighbor] = current;
                    gScore[neighbor] = tentativeGScore;
                    fScore[neighbor] = gScore[neighbor] + 
                        calculateDistance(
                            pathNetwork.nodes[neighbor], 
                            pathNetwork.nodes[endNode]
                        );

                    // Agregar a openSet si no est√°
                    if (!openSet.includes(neighbor)) {
                        openSet.push(neighbor);
                    }
                }
            }
        }

        if (iterations >= maxIterations) {
            console.error('‚ö†Ô∏è A* alcanz√≥ el l√≠mite de iteraciones');
        } else {
            console.warn('‚ö†Ô∏è No se encontr√≥ camino entre', startNode, 'y', endNode);
        }

        return null;
    }

    function calculatePathDistance(waypoints) {
        let totalDistance = 0;

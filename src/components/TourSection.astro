<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pannellum@2.5.6/build/pannellum.css"/>

<div class="max-w-7xl mx-auto pt-24 lg:pt-44 px-4 lg:px-0">
    <div class="rounded-xl shadow-lg overflow-hidden relative">
        <!-- Controles superiores -->
        <div class="absolute top-2 left-10 lg:top-4 lg:left-10 flex gap-1 lg:gap-2 z-[100]">
            <button id="prev-scene" class="bg-white/95 backdrop-blur-sm px-2 py-1.5 lg:px-4 lg:py-2 rounded-lg shadow-lg hover:shadow-xl transition-all flex items-center gap-1 lg:gap-2 hover:bg-white">
                <svg class="w-4 h-4 lg:w-5 lg:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                <span class="font-medium text-xs lg:text-base hidden sm:inline">Anterior</span>
            </button>
            <button id="next-scene" class="bg-white/95 backdrop-blur-sm px-2 py-1.5 lg:px-4 lg:py-2 rounded-lg shadow-lg hover:shadow-xl transition-all flex items-center gap-1 lg:gap-2 hover:bg-white">
                <span class="font-medium text-xs lg:text-base hidden sm:inline">Siguiente</span>
                <svg class="w-4 h-4 lg:w-5 lg:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </button>
        </div>


        <!-- Info de escena actual -->
        <div class="absolute top-2 right-2 lg:top-4 lg:right-4 z-[100]">
            <div class="bg-white/95 backdrop-blur-sm px-2 py-1.5 lg:px-4 lg:py-2 rounded-lg shadow-lg">
                <p id="scene-title" class="font-semibold text-xs lg:text-base text-gray-800">Entrada principal</p>

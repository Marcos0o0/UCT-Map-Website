---
import "../styles/global.css";
import Header from "../components/Header.astro";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/~mgodoy2025/favicon.webp" />
    <meta name="google-site-verification" content="scESuT31OY-ZR_QoOosmezppqmYob3pjPaT6zNgz03Y" />
    <title>Mapa UCT - Tour Virtual 360° Universidad Católica de Temuco</title>
    <meta name="description" content="Explora el campus de la Universidad Católica de Temuco con nuestro mapa interactivo y tour virtual 360°. Encuentra edificios, facultades y servicios.">
    <meta name="keywords" content="mapa uct, universidad católica temuco, tour virtual uct, campus uct, mapa universidad temuco">
    <meta property="og:title" content="Mapa UCT - Tour Virtual 360°">
    <meta property="og:description" content="Explora el campus UCT con mapa interactivo y tour virtual">
    <meta name="description" content={description || "Mapa de Universidad Católica de Temuco"} />
    <title>{title ? `${title} | Mapa UCT` : "Mapa UCT"}</title>
  </head>

  <body class="bg-gray-50 text-gray-900">
	<Header />
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  html, body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  main {
    min-height: 100vh;
  }
</style>

<style is:global>
  @import 'tailwindcss';

  @plugin "@midudev/tailwind-animations";
</style>


<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "CollegeOrUniversity",
  "name": "Universidad Católica de Temuco",
  "alternateName": "UCT",
  "url": "https://TU-DOMINIO.cl",
  "description": "Mapa interactivo y tour virtual 360° del campus UCT",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Avenida Rudecindo Ortega 02950",
    "addressLocality": "Temuco",
    "addressRegion": "Región de La Araucanía",
    "addressCountry": "CL"
  }
}
</script>
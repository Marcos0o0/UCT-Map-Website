---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Admin - Rese√±as Campus UCT">
  <!-- Pantalla de Login -->
  <div id="login-screen" class="min-h-screen flex items-center justify-center px-4 pt-20">
    <div class="bg-white rounded-2xl shadow-xl p-8 w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Panel de Administraci√≥n</h1>
        <p class="text-gray-600">Ingresa tus credenciales</p>
      </div>

      <form id="login-form" class="space-y-6">
        <div>
          <label for="username" class="block text-sm font-medium text-gray-700 mb-2">
            Usuario
          </label>
          <input 
            type="text" 
            id="username" 
            name="username" 
            required
            class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-blue-500 transition"
            placeholder="admin"
          />
        </div>

        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
            Contrase√±a
          </label>
          <input 
            type="password" 
            id="password" 
            name="password" 
            required
            class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-blue-500 transition"
            placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
          />
        </div>

        <div id="login-error" class="hidden p-4 bg-red-100 text-red-800 rounded-lg border-2 border-red-300">
          Credenciales incorrectas
        </div>

        <button 
          type="submit"
          class="w-full py-3 bg-blue-600 text-white font-bold rounded-lg hover:bg-blue-700 transition-all hover:shadow-lg"
        >
          Iniciar Sesi√≥n
        </button>
      </form>
    </div>
  </div>

  <!-- Panel de Administraci√≥n -->
  <main id="admin-panel" class="hidden min-h-screen bg-gradient-to-b from-gray-50 to-white py-8 px-4 pt-32">
    <div class="max-w-6xl mx-auto">
      
      <!-- Header -->
      <div class="bg-white rounded-lg shadow-md p-6 mb-6 flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Panel de Administraci√≥n</h1>
          <p class="text-gray-600 mt-2">Gestiona las rese√±as del campus</p>
        </div>
        <button 
          id="btn-cerrar-sesion"
          class="px-4 py-2 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 transition"
        >
          Cerrar Sesi√≥n
        </button>
      </div>

      <!-- Filtros -->
      <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <div class="flex flex-wrap gap-4">
          <button data-filter="todas" class="filter-btn px-4 py-2 rounded-lg font-medium bg-blue-600 text-white">
            Todas
          </button>
          <button data-filter="pendiente" class="filter-btn px-4 py-2 rounded-lg font-medium bg-gray-200 text-gray-700 hover:bg-gray-300">
            Pendientes
          </button>
          <button data-filter="aprobada" class="filter-btn px-4 py-2 rounded-lg font-medium bg-gray-200 text-gray-700 hover:bg-gray-300">
            Aprobadas
          </button>
          <button data-filter="rechazada" class="filter-btn px-4 py-2 rounded-lg font-medium bg-gray-200 text-gray-700 hover:bg-gray-300">
            Rechazadas
          </button>
        </div>
      </div>

      <!-- Mensaje -->
      <div id="mensaje" class="hidden mb-6 p-4 rounded-lg"></div>

      <!-- Lista de Rese√±as -->
      <div id="resenas-container" class="space-y-4">
        <div class="text-center py-12">
          <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto"></div>
          <p class="text-gray-600 mt-4">Cargando rese√±as...</p>
        </div>
      </div>

    </div>
  </main>
</Layout>

<script>
  const API_URL = 'https://teclab.uct.cl/~mgodoy2025/api';
  let resenasActuales: any[] = [];
  let filtroActual = 'todas';
  let sessionToken: string | null = null;

  // Verificar sesi√≥n al cargar
  document.addEventListener('DOMContentLoaded', () => {
    verificarSesion();
    inicializarEventos();
  });

  function inicializarEventos() {
    // Login form
    const loginForm = document.getElementById('login-form') as HTMLFormElement;
    loginForm?.addEventListener('submit', handleLogin);

    // Cerrar sesi√≥n
    const btnCerrar = document.getElementById('btn-cerrar-sesion');
    btnCerrar?.addEventListener('click', cerrarSesion);

    // Filtros
    const filterBtns = document.querySelectorAll('.filter-btn');
    filterBtns.forEach(btn => {
      btn.addEventListener('click', (e) => {
        const target = e.target as HTMLButtonElement;
        const filter = target.dataset.filter || 'todas';
        filtrarEstado(filter);
      });
    });
  }

  async function handleLogin(e: Event) {
    e.preventDefault();
    
    const form = e.target as HTMLFormElement;
    const username = (form.elements.namedItem('username') as HTMLInputElement).value;
    const password = (form.elements.namedItem('password') as HTMLInputElement).value;
    const loginError = document.getElementById('login-error');

    try {
      const response = await fetch(`${API_URL}/admin/login.php`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ username, password })
      });

      const data = await response.json();

      if (data.success) {
        sessionToken = data.token;
        localStorage.setItem('admin_token', data.token);
        localStorage.setItem('admin_user', username);
        
        mostrarPanel();
      } else {
        loginError?.classList.remove('hidden');
        setTimeout(() => {
          loginError?.classList.add('hidden');
        }, 3000);
      }
    } catch (error) {
      console.error('Error en login:', error);
      if (loginError) {
        loginError.textContent = 'Error de conexi√≥n';
        loginError.classList.remove('hidden');
      }
    }
  }

  function verificarSesion() {
    const token = localStorage.getItem('admin_token');
    
    if (token) {
      sessionToken = token;
      mostrarPanel();
    }
  }

  function mostrarPanel() {
    const loginScreen = document.getElementById('login-screen');
    const adminPanel = document.getElementById('admin-panel');
    
    loginScreen?.classList.add('hidden');
    adminPanel?.classList.remove('hidden');
    
    cargarResenas();
  }

  function cerrarSesion() {
    localStorage.removeItem('admin_token');
    localStorage.removeItem('admin_user');
    sessionToken = null;
    
    const loginScreen = document.getElementById('login-screen');
    const adminPanel = document.getElementById('admin-panel');
    const loginForm = document.getElementById('login-form') as HTMLFormElement;
    
    adminPanel?.classList.add('hidden');
    loginScreen?.classList.remove('hidden');
    loginForm?.reset();
  }

  async function cargarResenas() {
    try {
      const response = await fetch(`${API_URL}/admin/listar.php`, {
        headers: {
          'Authorization': `Bearer ${sessionToken}`
        }
      });
      const data = await response.json();

      if (data.success) {
        resenasActuales = data.resenas;
        mostrarResenas();
      } else {
        mostrarError('Error al cargar las rese√±as');
      }
    } catch (error) {
      console.error('Error:', error);
      mostrarError('Error de conexi√≥n');
    }
  }

  function filtrarEstado(estado: string) {
    filtroActual = estado;
    
    // Actualizar botones
    document.querySelectorAll('.filter-btn').forEach(btn => {
      btn.classList.remove('bg-blue-600', 'text-white');
      btn.classList.add('bg-gray-200', 'text-gray-700');
    });
    
    const activeBtn = document.querySelector(`[data-filter="${estado}"]`);
    activeBtn?.classList.remove('bg-gray-200', 'text-gray-700');
    activeBtn?.classList.add('bg-blue-600', 'text-white');

    mostrarResenas();
  }

  function mostrarResenas() {
    const container = document.getElementById('resenas-container');
    if (!container) return;
    
    let resenasFiltradas = resenasActuales;
    if (filtroActual !== 'todas') {
      resenasFiltradas = resenasActuales.filter(r => r.estado === filtroActual);
    }

    if (resenasFiltradas.length === 0) {
      container.innerHTML = `
        <div class="bg-white rounded-lg shadow-md p-12 text-center">
          <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
          </svg>
          <p class="text-gray-500 text-lg">No hay rese√±as ${filtroActual === 'todas' ? '' : filtroActual + 's'}</p>
        </div>
      `;
      return;
    }

    container.innerHTML = resenasFiltradas.map(resena => `
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex justify-between items-start mb-4">
          <div class="flex-1">
            <div class="flex items-center gap-3 mb-2">
              <h3 class="text-lg font-bold text-gray-900">${resena.nombre}</h3>
              <span class="px-3 py-1 rounded-full text-sm font-medium ${getEstadoColor(resena.estado)}">
                ${resena.estado}
              </span>
            </div>
            <p class="text-sm text-gray-500">
              ${new Date(resena.fecha).toLocaleString('es-CL')}
            </p>
          </div>
          <div class="flex gap-1">
            ${[1, 2, 3, 4, 5].map(star => `
              <svg class="w-5 h-5 ${star <= resena.calificacion ? 'text-yellow-400' : 'text-gray-300'}" 
                   fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            `).join('')}
          </div>
        </div>

        ${resena.comentario ? `
          <div class="bg-gray-50 rounded-lg p-4 mb-4">
            <p class="text-gray-700">${resena.comentario}</p>
          </div>
        ` : ''}

        <div class="flex gap-3">
          ${resena.estado !== 'aprobada' ? `
            <button onclick="window.cambiarEstado(${resena.id}, 'aprobada')" 
                    class="flex-1 px-4 py-2 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 transition">
              ‚úì Aprobar
            </button>
          ` : ''}
          
          ${resena.estado !== 'rechazada' ? `
            <button onclick="window.cambiarEstado(${resena.id}, 'rechazada')" 
                    class="flex-1 px-4 py-2 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 transition">
              ‚úó Rechazar
            </button>
          ` : ''}
          
          <button onclick="window.eliminarResena(${resena.id})" 
                  class="px-4 py-2 bg-gray-600 text-white font-medium rounded-lg hover:bg-gray-700 transition">
            üóëÔ∏è Eliminar
          </button>
        </div>
      </div>
    `).join('');
  }

  function getEstadoColor(estado: string): string {
    switch(estado) {
      case 'aprobada': return 'bg-green-100 text-green-800';
      case 'rechazada': return 'bg-red-100 text-red-800';
      case 'pendiente': return 'bg-yellow-100 text-yellow-800';
      default: return 'bg-gray-100 text-gray-800';
    }
  }

  // Funciones globales para los botones
  (window as any).cambiarEstado = async function(id: number, nuevoEstado: string) {
    const endpoint = nuevoEstado === 'aprobada' ? 'aprobar.php' : 'rechazar.php';
    
    try {
      const response = await fetch(`${API_URL}/admin/${endpoint}`, {
        method: 'POST',
        headers: { 
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${sessionToken}`
        },
        body: JSON.stringify({ id })
      });

      const data = await response.json();

      if (data.success) {
        mostrarMensaje(`Rese√±a ${nuevoEstado} exitosamente`, 'success');
        await cargarResenas();
      } else {
        mostrarMensaje(data.error || 'Error al cambiar estado', 'error');
      }
    } catch (error) {
      console.error('Error:', error);
      mostrarMensaje('Error de conexi√≥n', 'error');
    }
  };

  (window as any).eliminarResena = async function(id: number) {
    if (!confirm('¬øEst√°s seguro de que quieres eliminar esta rese√±a?')) return;

    try {
      const response = await fetch(`${API_URL}/admin/eliminar.php`, {
        method: 'POST',
        headers: { 
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${sessionToken}`
        },
        body: JSON.stringify({ id })
      });

      const data = await response.json();

      if (data.success) {
        mostrarMensaje('Rese√±a eliminada exitosamente', 'success');
        await cargarResenas();
      } else {
        mostrarMensaje(data.error || 'Error al eliminar', 'error');
      }
    } catch (error) {
      console.error('Error:', error);
      mostrarMensaje('Error de conexi√≥n', 'error');
    }
  };

  function mostrarMensaje(texto: string, tipo: 'success' | 'error') {
    const mensaje = document.getElementById('mensaje');
    if (!mensaje) return;
    
    mensaje.textContent = texto;
    mensaje.className = `mb-6 p-4 rounded-lg ${
      tipo === 'success' 
        ? 'bg-green-100 text-green-800 border-2 border-green-300' 
        : 'bg-red-100 text-red-800 border-2 border-red-300'
    }`;
    mensaje.classList.remove('hidden');

    setTimeout(() => {
      mensaje.classList.add('hidden');
    }, 5000);
  }

  function mostrarError(texto: string) {
    const container = document.getElementById('resenas-container');
    if (!container) return;
    
    container.innerHTML = `
      <div class="bg-red-100 border-2 border-red-300 rounded-lg p-6 text-center">
        <p class="text-red-800 font-medium">${texto}</p>
      </div>
    `;
  }
</script>
</Layout>